@using ProjectsManagement.Authorization.Roles
@using ProjectsManagement.Web.Models.Jobs
@using ProjectsManagement.Web.Startup
@model IndexJobModalViewModel
@{
    ViewBag.Title = L("Jobs");
    ViewBag.CurrentPageName = PageNames.Jobs;
}
@section scripts
{
    <script>
             var IsSupervisor="@User.IsInRole(StaticRoleNames.Host.Supervisor)".toLowerCase()=="true";
    </script>
        <script src="~/view-resources/Views/Jobs/Index.js" asp-append-version="true"></script>

}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Jobs")</h1>
            </div>
              @if (IsGranted("Pages.Jobs.CreateJob"))
            {
                 <div class="col-sm-6">
                    <button type="button" class="btn bg-blue float-sm-right create-jobs" data-toggle="modal" data-target="#JobsCreateModal">
                        <i class="fa fa-plus-square"></i>
                        @L("Create")
                    </button>
            </div>
            }
           
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Jobs/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="JobsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                            <th>@L("Name")</th>
                                             <th>@L("Description")</th>
                                            <th>@L("SprintName")</th>
                                            <th>@L("Workers")</th>
                                            <th>@L("ExpectedNoOfHours")</th>
                                            <th>@L("ActualNumberOfHours")</th>
                                            <th>@L("Points")</th>
                                            <th>@L("StartDate")</th>
                                            <th>@L("Status")</th>

                                            <th>@L("EndDate")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="JobsEditModal" tabindex="-1" role="dialog" aria-labelledby="JobsEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
<div class="modal fade" id="JobsCreateModal" tabindex="-1" role="dialog" aria-labelledby="JobsCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<div class="modal fade" id="SupervisorNotesCreateModal" tabindex="-1" role="dialog" aria-labelledby="SupervisorNotesCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

