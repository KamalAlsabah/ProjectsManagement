@using ProjectsManagement.ProjectDatabase.Enums
@using ProjectsManagement.Web.Models.Common.Modals
@using ProjectsManagement.Web.Models.Jobs
@model CreateJobModalViewModel
@{
    Layout = null;
    
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateJobs")))
<form name="JobsCreateForm" role="form" class="form-horizontal">
    <input id="ProjectId" class="form-control" type="hidden" name="ProjectId" asp-for="CreateJobDto.ProjectId">
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="NameL">@L("NameL")</label>
            <div class="col-md-9">
                <input id="NameL" class="form-control" type="text" name="NameL" asp-for="CreateJobDto.NameL">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="NameF">@L("NameF")</label>
            <div class="col-md-9">
                <input id="NameF" type="text" class="form-control" name="NameF" asp-for="CreateJobDto.NameF">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="ExpectedNoOfHours">@L("ExpectedNoOfHours")</label>
            <div class="col-md-9">
                <input id="ExpectedNoOfHours" type="number" class="form-control" name="ExpectedNoOfHours" asp-for="CreateJobDto.ExpectedNoOfHours">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="UserId">@L("Users")</label>
            <div class="col-md-9">
                <select id="WorkerId" class="form-control" name="WorkerId" asp-for="CreateJobDto.WorkerId" asp-items='new SelectList(Model.Users,"Value","Name")'>
                    <option disabled value="">@L("WithoutUser")</option>

                </select>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="SprintId">@L("Sprints")</label>
            <div class="col-md-9">
                <select id="SprintId" class="form-control" name="SprintId" asp-for="CreateJobDto.SprintId" asp-items='new SelectList(Model.Sprints,"Value","Name")'>
                    <option disabled value="">@L("WithoutSprint")</option>

                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label" for="Description">@L("Description")</label>
            <div class="col-md-9">
                <textarea id="Description" class="form-control" name="Description" asp-for="CreateJobDto.Description"></textarea>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Jobs/_CreateModal.js" asp-append-version="true"></script>