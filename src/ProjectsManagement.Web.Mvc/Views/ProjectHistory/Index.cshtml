@using ProjectsManagement.Web.Models.ProjectHistory
@using ProjectsManagement.Web.Startup
@model IndexProjectHistoryModalViewModel
@{
    ViewBag.Title = L("ProjectHistory");
    ViewBag.CurrentPageName = PageNames.ProjectHistory;
}
@section scripts
{
   
    <environment names="Development">
        <script src="~/view-resources/Views/ProjectHistory/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/ProjectHistory/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("ProjectHistory")</h1>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/ProjectHistory/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="ProjectHistoryTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                            <th>@L("ProjectName")</th>
                                            <th>@L("UserName")</th>
                                            <th>@L("SprintName")</th>
                                            <th>@L("JobName")</th>
                                            <th>@L("JobTasksName")</th>
                                            <th>@L("ProjectWorkersName")</th>
                                            <th>@L("ProjectSupervisorsName")</th>
                                            <th>@L("SupervisorNotesName")</th>
                                            <th>@L("CreationTime")</th>
                                            <th>@L("ProjectHistoryActions")</th>
                                            <th>@L("ProjectHistoryColumns")</th>
                                            <th>@L("Description")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
