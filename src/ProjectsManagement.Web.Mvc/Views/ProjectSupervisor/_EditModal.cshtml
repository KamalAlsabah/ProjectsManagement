@using ProjectsManagement.ProjectDatabase.Enums
@using ProjectsManagement.Web.Models.Common.Modals
@using ProjectsManagement.Web.Models.ProjectSuprevisor
@model EditProjectSupervisorModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProjectSupervisor")))
<form name="ProjectSupervisorEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" asp-for="projectSupervisorEditDto.Id" />
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="SupervisorId">@L("SupervisorName")</label>
            <div class="col-md-9">
                <select id="SupervisorId" type="text" class="form-control" name="SupervisorId" asp-items="Model.Supervisors" asp-for="projectSupervisorEditDto.SupervisorId"></select>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/ProjectSupervisor/_EditModal.js" asp-append-version="true"></script>
