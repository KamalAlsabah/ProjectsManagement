@using ProjectsManagement.ProjectDatabase.Enums
@using ProjectsManagement.Web.Models.Common.Modals
@using ProjectsManagement.Web.Models.Sprints
@model EditSprintModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditSprints")))
<form name="SprintsEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" asp-for="EditSprintDto.Id" />
    
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="NameL">@L("NameL")</label>
            <div class="col-md-9">
                <input id="NameL" class="form-control" type="text" name="NameL" asp-for="EditSprintDto.NameL">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="NameF">@L("NameF")</label>
            <div class="col-md-9">
                <input id="NameF" type="text" class="form-control" name="NameF" asp-for="EditSprintDto.NameF">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="Status">@L("Status")</label>
            <div class="col-md-9">
                <select id="Status" class="form-control" name="Status" asp-for="EditSprintDto.Status" asp-items="Html.GetEnumSelectList<SprintStatus>()">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label" for="StartDate">@L("StartDate")</label>
            <div class="col-md-9">
                <input id="StartDate" type="date" class="form-control" name="StartDate" asp-for="EditSprintDto.StartDate" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label" for="StartDate">@L("ExpectedEndDate")</label>
            <div class="col-md-9">
                <input id="ExpectedEndDate" type="date" class="form-control" name="ExpectedEndDate" asp-for="EditSprintDto.ExpectedEndDate" />
            </div>
        </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label" for="WieghtOfHours">@L("Points")</label>
            <div class="col-md-9">
                <input id="WieghtOfHours" type="number" class="form-control"min="0" name="WieghtOfHours" asp-for="EditSprintDto.WieghtOfHours" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label" for="Description">@L("Description")</label>
            <div class="col-md-9">
                <textarea id="Description" class="form-control" name="Description" asp-for="EditSprintDto.Description"></textarea>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Sprints/_EditModal.js" asp-append-version="true"></script>
