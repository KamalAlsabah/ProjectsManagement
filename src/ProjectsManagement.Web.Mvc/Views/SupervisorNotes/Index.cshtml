@using ProjectsManagement.Web.Models.SupervisorNotes
@using ProjectsManagement.Web.Startup
@model IndexSupervisorNotesModalViewModel
@{
    ViewBag.Title = L("SupervisorNotes");
    ViewBag.CurrentPageName = PageNames.SupervisorNotes;
}
@section scripts
{
        <script src="~/view-resources/Views/SupervisorNotes/Index.js" asp-append-version="true"></script>
  
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("SupervisorNotes")</h1>
            </div>
            <div class="col-sm-6">
                <button type="button" class="btn bg-blue float-sm-right create-supervisorNotes" data-toggle="modal" data-target="#SupervisorNotesCreateModal">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </button>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/SupervisorNotes/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="SupervisorNotesTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("UserNote")</th>
                                        <th>@L("UserName")</th>
                                        <th>@L("JobName")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="SupervisorNotesEditModal" tabindex="-1" supervisorNotes="dialog" aria-labelledby="SupervisorNotesEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" supervisorNotes="document">
        <div class="modal-content">
        </div>
    </div>
</div>
<div class="modal fade" id="SupervisorNotesCreateModal" tabindex="-1" supervisorNotes="dialog" aria-labelledby="SupervisorNotesCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" supervisorNotes="document">
        <div class="modal-content">
        </div>
    </div>
</div>