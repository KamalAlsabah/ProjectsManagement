@using ProjectsManagement.Web.Models.WorkersDashboards
@using ProjectsManagement.Web.Startup
@model IndexWorkersDashboardModalViewModel
@{
    ViewBag.Title = L("WorkersDashboard");
    ViewBag.CurrentPageName = PageNames.WorkersDashboard;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/WorkersDashboard/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/WorkersDashboard/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("WorkersDashboard")</h1>
            </div>
            <div class="col-sm-6">
                    <button type="button" class="btn bg-blue float-sm-right create-WorkersDashboard" data-toggle="modal" data-target="#WorkersDashboardCreateModal">
                        <i class="fa fa-plus-square"></i>
                        @L("Create")
                    </button>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/WorkersDashboard/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="WorkersDashboardsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                            <th>@L("WorkerName")</th>
                                            <th>@L("WorkerJobsCount")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
